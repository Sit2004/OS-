ch=1
while [ $ch -lt 4 ]
do
    echo menu
    echo 1.Greatest of 3
    echo 2.Reverse
    echo 3.Sum of individual digits
    echo 4.exit

    echo Enter your choice:
    read ch

    case $ch in
        1)
            echo "Enter the three numbers: "
            read a
            read b
            read c

            if [ $a -gt $b -a $a -gt $c ]
            then
               echo "$a is greater"
           elif [ $b -gt $c -a $b -gt $a ]
           then
              echo "$b is greater"
          else
             echo "$c is greater."
            fi
            ;;

        2)
            echo "Enter the number:"
            read num

            reverse=0

            while [ $num -gt 0 ]
            do
                digit=`expr $num % 10`
                reverse=`expr $reverse \* 10 + $digit`
                num=`expr $num / 10`
            done
            echo "The number is $reverse"
            ;;

        3)
            echo "Enter the number:"
            read num

            sum=0

            while [ $num -gt 0 ]
            do
                digit=`expr $num % 10`
                sum=`expr $sum + $digit`
                num=`expr $num / 10`
            done
            echo "The sum is $sum"
            ;;
    esac
done
